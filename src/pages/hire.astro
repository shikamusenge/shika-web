<style>
    * {
        box-sizing: border-box;
        padding: 0;
        margin: 0;
    }

    body, html {
        font-family: "Inter", sans-serif;
        background-color: hsl(0, 0%, 95%);
        color: hsl(0, 0%, 20%);
    }

    main {
        margin: auto;
        max-width: 800px;
        padding: 2rem;
        min-height: 90vh;
    }

    .hire-me {
        text-align: center;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin: 1rem;
    }

    .hire-me h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: hsl(0, 0%, 15%);
    }

    .hire-me p {
        font-size: 1.1rem;
        line-height: 1.6;
        color: hsl(0, 0%, 40%);
        margin-bottom: 1.5rem;
    }

    .form-container {
        width: 100%;
        max-width: 800px;
        margin: auto;
    }

    iframe {
        width: 100%;
        height: 800px;
        border: none;
        border-radius: 8px;
    }
    
    @media (max-width: 768px) {
        .hire-me {
            padding: 1rem;
        }

        iframe {
            height: 600px;
        }
    }
</style>
