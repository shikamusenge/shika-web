---
import { Image } from "astro:assets";
import gitHub from "../../public/social_media/3d-fluency-github-logo.png";
import Linked from "../../public/social_media/icons8-in-48.png";
import insta from "../../public/social_media/grapy-instagram-icon.png";
import whatsapp from "../../public/social_media/icons8-whatsapp-50.png";
import fb from "../../public/social_media/icons8-facebook-48.png";
import twiter from "../../public/social_media/twitter-x-logo-png-9.png";
import home from "../../public/social_media/icons8-home-50.png";
const medias = [
  {
    mediaIcon: twiter,
    url: "https://twitter.com/ShikamusengeP",
    alt: "Twitter Icon"
  },
  {
    mediaIcon: Linked,
    url: "https://www.linkedin.com/in/shikamusenge-philemon-86494b291/",
    alt: "LinkedIn Icon"
  },
  {
    mediaIcon: gitHub,
    url: "https://github.com/shikamusenge",
    alt: "GitHub Icon"
  },
  {
    mediaIcon: whatsapp,
    url: "https://wa.me/+250784589448",
    alt: "WhatsApp Icon"
  },
  {
    mediaIcon: fb,
    url: "https://www.facebook.com/profile.php?id=100085362144715",
    alt: "Facebook Icon"
  },
  {
    mediaIcon: insta,
    url: "https://www.instagram.com/phile_ruganzu720/",
    alt: "Instagram Icon"
  },
];
---

<section>
  <div class="container">
    <div id="main">
      <ul>
        {medias.map((media) => (
          <li>
            <a href={media.url} target="_blank" rel="noopener noreferrer" aria-label={media.alt}>
              <Image src={media.mediaIcon} width={28} height={28} alt={media.alt} />
            </a>
          </li>
        ))}
      </ul>
      <a href="#home">
        <Image src={home} width={30} height={30} alt="Home Icon" class="img" />
      </a>
    </div>
    <div style="text-align: center;">
      ALL RIGHTS RESERVED TO &copy; SHIKAMUSENGE
    </div>
  </div>
</section>

<style>
  section {
    background-color: black;
    color: white;
  }
  ul {
    display: flex;
    padding-block: 0.8rem;
    gap: 0.7rem;
  }
  ul li {
    list-style: none;
  }
  #main {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .img {
    margin-block: auto;
    margin-inline-end: 2rem;
  }
</style>
